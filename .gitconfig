[user]
	name = Mo Lawson
	email = moklawson@gmail.com
[color]
  ui = auto
[core]
	quotepath = false
[alias]
  st = status
  ci = commit
  ca = commit -a
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD-1
  ss = stash save
  sp = !git ss --patch
  sdc = svn dcommit
  sfa = svn fetch --all
  sr = svn rebase
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
  tool = vimdiff
[mergetool]
	keepBackup = true
