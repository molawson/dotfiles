# Desktop
alias dh='defaults write com.apple.finder CreateDesktop -bool false ; killall Finder'
alias ds='defaults write com.apple.finder CreateDesktop -bool true ; killall Finder'

# PostgreSQL
alias pg-start="pg_ctl -D /usr/local/var/postgres -l logfile start"
alias pg-stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Nginx
alias nr="sudo nginx -s reload"

# Apache
alias ar="sudo apachectl restart"
alias avh="sudo vim /etc/apache2/extra/httpd-vhosts.conf"

# ColdFusion
alias cf-start="/Applications/ColdFusion8/bin/coldfusion start"
alias cf-stop="/Applications/ColdFusion8/bin/coldfusion stop"
alias cf-restart="/Applications/ColdFusion8/bin/coldfusion restart"

# Echo Hub Store
alias echohs-clear="curl -G http://echohub.com/store/index.cfm -d event=cache.invalidate -d transfer=true ; echo 'cleared Echo Hub Store cache'"
alias echohs-restart="curl -s -G http://echohub.com/store/index.cfm -d reload_app=true -d init=true -o 'curl_log.txt' -w 'HTTP RESPONSE CODE: %{http_code}\\n' ; rm -f curl_log.txt"
alias echohsdev-clear="curl -G http://echohub.dev//store/index.cfm -d event=cache.invalidate -d transfer=true ; echo 'cleared local Echo Hub Store cache'"
alias echohsdev-restart="curl -s -G http://echohub.dev/store/index.cfm -d reload_app=true -d init=true -o 'curl_log.txt' -w 'HTTP RESPONSE CODE: %{http_code}\\n' ; rm -f curl_log.txt"

# Util
alias ptime="date +'%Y%m%d%H%M%S'"

# Fun
alias unlocked="ruby ~/Code/util/achievement_unlocked.rb "
