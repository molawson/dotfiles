# cd
alias ..='cd ..'
alias c='clear'
alias cc='cd ; clear'

alias scratch='cd ~/Dropbox/Documents/Scratch'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# Git
alias g='git'
alias gs='gitsh'

# Tmux
alias t='tmux'
alias tn='tmux new -s'
alias ta='tmux attach -t'
alias tl='tmux list-sessions'
alias tt='./tmux.sh'

alias pair='ssh -R 1337:localhost:22 pair@molawson.com'

# Cloudapp
alias cl='cloudapp'
alias cld='cloudapp --direct'

# Rbenv
alias ri='rbenv install $(rbenv local)'

# Rails
alias rc='rails console'
alias rs='rails server'
alias rg='rails generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias tlogt='tail -f log/test.log'
alias rst='touch tmp/restart.txt'

# Rails 2
alias sc='script/console --irb=pry'
alias ss='script/server'

# Bundler
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'

# Zeus
alias z='zeus start'
alias zc='zeus console'
alias zs='zeus server'
alias zg='zeus generate'
alias zr='zeus rake'
alias zt='zeus rspec'

# Vagrant
alias vt='vagrant status'
alias vu='vagrant up'
alias vs='vagrant suspend'
alias vh='vagrant halt'

# PCO Box
alias pb='pco box'
alias pbi='pco box bundle install'
alias pbc='pco box rails console'
alias pbg='pco box rails generate'
alias pbm='pco box rake db:migrate'
alias pbr='pco box apprestart'

# Vim
alias v.='vim .'
alias v='vim'
alias sv='sudo vim'

# Sublime Text
alias s.='subl .'

# Finder
alias o.='open .'

# Desktop
alias dh='defaults write com.apple.finder CreateDesktop -bool false ; killall Finder'
alias ds='defaults write com.apple.finder CreateDesktop -bool true ; killall Finder'

# PostgreSQL
alias pg-start="pg_ctl -D /usr/local/var/postgres -l logfile start"
alias pg-stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Nginx
alias nr="sudo nginx -s reload"

# Apache
alias ar="sudo apachectl restart"
alias avh="sudo vim /etc/apache2/extra/httpd-vhosts.conf"

# Util
alias ptime="date +'%Y%m%d%H%M%S'"

# Fun
alias unlocked="ruby ~/Code/util/achievement_unlocked.rb "
