#! /bin/bash

git pull origin

git remote update --prune

deleted_branches() {
  git branch -vv --no-color | grep ': gone]'|  grep -v "\*" | awk '{ print $1; }'
}

if [[ $1 == "--force" || $1 == "-f" ]]; then
  deleted_branches | xargs -r git branch -D
else
  deleted_branches | xargs -r git branch -d
fi

