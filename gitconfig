# Inspiration (and much of the actual code) from Gary Bernhardt's dotfiles (https://github.com/garybernhardt/dotfiles)

[user]
  name = Mo Lawson
  email = moklawson@gmail.com
[color]
  ui = auto
[core]
  quotepath = false
  excludesfile = /Users/molawson/.gitignore_global
[alias]
  st = status -sb
  ci = commit
  cm = !git ci -m
  ca = !git ci -a
  co = checkout
  d = diff
  dc = diff --cached
  dh = diff HEAD^
  ds = !git d --stat=100,100
  dsc = !git dc --stat=100,100
  dsh = !git d --stat=100,100 HEAD^
  amend = commit --amend
  aa = add --all
  ap = add -p
  head = !git l -1
  h = !git head
  r = !git l -20
  ra = !git r --all
  rb = !git r --branches --remotes --tags
  re = rebase
  rh = reset HEAD
  ru = remote update --prune
  p = push
  po = !git p origin
  u = pull
  uo = !git u origin
  ff = merge --ff-only
  noff = merge --no-ff
  uff = !git u --ff-only
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  ld = !git l -1 --pretty
  fa = fetch --all
  b = branch
  s = stash save
  sp = !git s --patch
  sl = stash list
  so = stash pop
  ss = stash show
  ssp = !git ss --patch
  sd = stash drop
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = true
[push]
  default = simple
[github]
  user = molawson
[credential]
  helper = osxkeychain
[init]
  templatedir = /Users/molawson/.git_template
[pull]
  rebase = true
[gitsh]
  noGreeting = true
  defaultCommand = st
