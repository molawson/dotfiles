# Inspiration (and much of the actual code) from Gary Bernhardt's dotfiles (https://github.com/garybernhardt/dotfiles)

[user]
  name = Mo Lawson
  email = mo@molawson.com
[color]
  ui = always
[core]
  quotepath = false
  excludesfile = ~/.gitignore_global
  editor = nvim
  pager = diff-highlight | less -FX
[alias]
  aa = add --all
  amend = commit --amend
  ap = add -p
  b = branch
  br = browse
  ca = !git ci -a
  cf = !git ci --fixup
  ci = commit
  cm = !git ci -m
  co = no-checkout
  d = diff
  db = diff-branch
  dc = diff --cached
  dh = diff HEAD^
  ds = !git d --stat=100,100
  dsc = !git dc --stat=100,100
  dsh = !git d --stat=100,100 HEAD^
  fa = fetch --all
  ff = merge --ff-only
  h = !git head
  head = !git l -1
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  ld = !git l -1 --pretty
  mt = mergetool
  noff = merge --no-ff
  p = push
  po = !git p origin
  pof = !git po --force-with-lease
  r = !git l -20
  ra = !git r --all
  rb = !git r --branches --remotes --tags
  rc = rebase --continue
  re = rebase
  ri = rebase -i
  rs = restore
  rh = reset HEAD
  rib = rebase-branch
  ribo = rebase-branch-old
  ru = remote update --prune
  s = stash save
  sg = stash save --staged
  sl = stash list
  so = stash pop
  sp = !git s --patch
  ss = stash show
  ssp = !git ss --patch
  st = status -sb
  sw = switch
  swd = switch --detach
  t = !tig
  u = pull
  uff = !git u --ff-only
  uo = !git u origin
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
  tool = nvim
[mergetool]
  keepBackup = true
[push]
  default = simple
[github]
  user = molawson
[init]
  templatedir = ~/.git_template
  defaultBranch = main
[pull]
  rebase = true
[gitsh]
  noGreeting = true
  defaultCommand = st
  gitCommand = hub
  prompt = "%D %c%b%#%w"
[mergetool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED
  keepBackup = false
[include]
  path = ~/.gitconfig_private
[rebase]
  autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
  gpgsign = true
