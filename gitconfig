# Inspiration (and much of the actual code) from Gary Bernhardt's dotfiles (https://github.com/garybernhardt/dotfiles)

[user]
  name = Mo Lawson
  email = mo@molawson.com
[color]
  ui = always
[core]
  quotepath = false
  excludesfile = ~/.gitignore_global
  editor = nvim
  pager = diff-highlight | less -FX
[alias]
  aa = add --all
  ap = add -p
  b = branch
  br = browse
  ca = commit --amend
  ce = commit --allow-empty
  cf = commit --fixup
  ci = commit
  cl = clean-branches
  clf = clean-branches --force
  co = no-checkout
  cp = cherry-pick
  d = diff
  db = diff-branch
  dc = diff --cached
  dh = diff HEAD^
  ds = diff --stat=100,100
  dsc = !git dc --stat=100,100
  dsh = diff --stat=100,100 HEAD^
  fa = fetch --all
  ff = merge --ff-only
  h = !git l -1
  hd = !git h --pretty
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  mt = mergetool
  mk = merge --abort
  noff = merge --no-ff
  p = push
  po = push origin
  pof = !git po --force-with-lease
  r = !git l -20
  ra = !git r --all
  rb = !git r --branches --remotes --tags
  rc = rebase --continue
  re = rebase
  ri = rebase -i
  rk = rebase --abort
  rs = restore
  rh = reset HEAD
  rib = rebase-branch
  ribo = rebase-branch-old
  ru = remote update --prune
  sc = switch -c
  sg = stash save --staged
  sh = stash show
  sl = stash list
  sm = switch main
  so = stash pop
  ss = stash save
  st = status -sb
  std = staging-deploy
  str = staging-reset
  sw = switch
  swd = switch --detach
  t = !tig
  u = pull
  uff = pull --ff-only
  uo = pull origin
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
  tool = fugitive
[mergetool]
  keepBackup = true
[push]
  default = simple
  autoSetupRemote = true
[github]
  user = molawson
[init]
  # templatedir = ~/.git_template
  defaultBranch = main
[pull]
  rebase = true
[gitsh]
  noGreeting = true
  defaultCommand = st
  gitCommand = hub
  prompt = "%D %c%b%#%w"
[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
  keepBackup = false
[include]
  path = ~/.gitconfig_private
[rebase]
  autosquash = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[commit]
  gpgsign = true
[hub]
  protocol = ssh
[gpg]
  format = ssh
